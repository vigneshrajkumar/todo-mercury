<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="430.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AppController">



        <VBox prefHeight="430.0" prefWidth="550.0">
            <MenuBar>
                <Menu text="Menu">
                    <MenuItem fx:id="vSettingsMenuButton" text="Settings" />
                    <MenuItem fx:id="vAboutMenuButton" text="About" />
                </Menu>
            </MenuBar>

            <HBox prefWidth="280.0">
                <TextField fx:id="vTask" prefHeight="27.0" prefWidth="378.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></TextField>
                <Button fx:id="vAdd" text="Add">
                   <HBox.margin>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                   </HBox.margin>
                </Button>

                <Button fx:id="vRefresh" text="Refresh">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>

            <ListView fx:id="vTaskList">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin></ListView>

        </VBox>
    

</AnchorPane>
